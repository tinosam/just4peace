<div id="page-contents ">
  <div class="container ">
    <div class="row">
      <% if activity_resources_exist?(activity) %>
      <div id="activity-<%= activity.id %>" class="activity">
        <div class="activity-comment">
          
            <div class="col-md-1">
              <%= render 'shared/avatar', user: activity.owner %>
           
            </div>
            <div class="col-md-11">
              <h4 class="name">
                <%= link_to activity.owner.name, user_path(activity.owner) %>
              </h4>
              <span class="action">A commenter dans
                <%= link_to activity.trackable.commentable.class.to_s, activity.trackable.commentable %></span>

              <div class="content">
                <h4><small>
                    <%= activity.trackable.comment_html %></small></h4>
              </div>
              <%= render 'shared/created_at', activity: activity %>
            </div>
         
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<hr>
  <!-- <div class="line-divider"></div> -->